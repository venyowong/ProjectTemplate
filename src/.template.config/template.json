{
    "$schema": "http://json.schemastore.org/template",
    "author": "Venyo Wong",
    "classifications": [ "Web", "MVC" ],
    "identity": "Base",
    "name": "Base",
    "shortName": "base",
    "preferNameDirectory": true,
    "symbols": {
        "name": {
            "type": "parameter",
            "replaces": "ProjectTemplate",
            "FileRename": "ProjectTemplate",
            "isRequired": true
        },
        "Swagger": {
            "type": "parameter", 
            "dataType":"bool", 
            "defaultValue": "true"
        },
        "RateLimit": {
            "type": "parameter", 
            "dataType":"bool", 
            "defaultValue": "true"
        },
        "Polly": {
            "type": "parameter", 
            "dataType":"bool", 
            "defaultValue": "true"
        },
        "Quartz": {
            "type": "parameter", 
            "dataType":"bool", 
            "defaultValue": "true"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        ".template.config/**/*",
                        ".vs/**",
                        ".vscode/**",
                        "bin/**",
                        "log/**",
                        "obj/**",
                        "ProjectTemplate.xml"
                    ]
                },
                {
                    "condition": "(!Polly)",
                    "exclude": [
                        "PollyPolicies.cs",
                        "Extensions/HttpClientExtension.cs",
                        "Extensions/PollyContextExtension.cs",
                        "Extensions/RedisDbExtension.cs",
                        "Extensions/DbConnectionExtension.cs"
                    ]
                },
                {
                    "condition": "(!Quartz)",
                    "exclude": [
                        "Quartz/**",
                        "Jobs/**",
                        "Middlewares/ManualTriggerMiddleware.cs"
                    ]
                }
            ]
        }
    ]
}