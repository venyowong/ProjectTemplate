{
    "$schema": "http://json.schemastore.org/template",
    "author": "Venyo Wong",
    "classifications": [ "Web", "MVC" ],
    "identity": "Base",
    "name": "Base",
    "shortName": "base",
    "symbols": {
        "ProjectName": {
            "type": "parameter",
            "replaces": "ProjectTemplate",
            "FileRename": "ProjectTemplate",
            "isRequired": true
        }
    },
    "sources": [
        {
            "exclude": [
                ".template.config/**/*",
                ".vs/**",
                ".vscode/**",
                "bin/**",
                "log/**",
                "obj/**",
                "ProjectTemplate.xml"
            ]
        }
    ]
}